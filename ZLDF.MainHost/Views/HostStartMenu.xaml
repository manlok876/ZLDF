<UserControl x:Class="ZLDF.MainHost.Views.HostStartMenu"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:prism="http://prismlibrary.com/"
			 prism:ViewModelLocator.AutoWireViewModel="True"
			 mc:Ignorable="d"
			 d:DesignHeight="300" d:DesignWidth="500"
			 >
	<Grid Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<StackPanel Orientation="Vertical" Margin="5" Grid.Column="0" >
			<UniformGrid Columns="2">
				<TextBlock Text="Title" />
				<TextBox x:Name="NewTournamentTitle" Text="{Binding NewTournamentTitle}" />
			</UniformGrid>
			<Button x:Name="CreateButton" Click="CreateButton_Click" Content="Create tournament" />
		</StackPanel>
		<StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" Background="LightGray" >
			<Button x:Name="LoadButton" Click="LoadButton_Click" Content="Load tournament" />
		</StackPanel>
	</Grid>
</UserControl>
