<UserControl x:Class="ZLDF.MainHost.Views.TournamentView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:prism="http://prismlibrary.com/"
			 prism:ViewModelLocator.AutoWireViewModel="True"
			 xmlns:local="clr-namespace:ZLDF.MainHost.Views"
			 mc:Ignorable="d"
			 d:DesignHeight="450" d:DesignWidth="800"
			 >
	<Grid>
		<TabControl>
			<TabItem Header="Tournament">
				<Grid>
					<TextBlock Text="Title"/>
					<TextBox HorizontalAlignment="Left" Margin="117,10,0,0" TextWrapping="Wrap" Text="{Binding Tournament.Title}" VerticalAlignment="Top" Width="120"/>
					<DockPanel Margin="10,120,10,10">
						<TextBlock Text="Nominations" Height="20" Margin="5" DockPanel.Dock="Top"/>
						<UniformGrid Columns="2" Height="50" DockPanel.Dock="Bottom">
							<Button x:Name="AddButton" Click="AddButton_Click" Content="Add" Margin="5"/>
							<Button x:Name="RemoveButton" Click="RemoveButton_Click" Content="Remove" Margin="5"/>
						</UniformGrid>
						<ListView Margin="5,0"/>
					</DockPanel>
				</Grid>
			</TabItem>
			<TabItem Header="Participants">
				<local:ParticipantsView/>
			</TabItem>
			<TabItem Header="{Binding Tournament.Title}">
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>
